{
  "description": "Allow only incoming SSH and HTTP from internet; allow all outgoing traffic",

  "zone": {
    "internet": { "iface": "eth0" }
  },

  "policy": [
    { "in": "internet", "action": "drop" },
    { "in": "_fw", "action": "accept" }
  ],

  "filter": [
    {
      "in": "internet",
      "service": "ping",
      "action": "accept",
      "flow-limit": { "count": 10, "interval": 6 }
    },
    {
      "in": "internet",
      "out": "_fw",
      "service": "ssh",
      "action": "accept",
      "conn-limit": { "count": 3, "interval": 60 }
    },
    {
      "in": "internet",
      "out": "_fw",
      "service": "http",
      "action": "accept"
    }
  ]
}